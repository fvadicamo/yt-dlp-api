# Flake8 configuration
# Note: Flake8 doesn't support pyproject.toml natively yet
# This file mirrors the configuration in pyproject.toml [tool.flake8]

[flake8]
max-line-length = 100
# Whitespace before ':' (conflicts with Black)
# Line too long (handled by Black)
# Line break before binary operator (conflicts with Black)
# Missing docstring in public module
# Missing docstring in public package
# First line should end with period (too strict)
# Multi-line docstring summary position
# Missing docstring in public method (too strict for tests)
extend-ignore = E203,E501,W503,D100,D104,D415,D212,D102,D107

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    build,
    dist,
    *.egg-info,

per-file-ignores =
    __init__.py:F401,D103
    tests/*:D103,S101

docstring-convention = google
max-complexity = 10
